{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('main.css') }}">
{% endblock %}

{% block body %}
    <h1>{{ name | upper }} Tasks</h1>

    {% for task in tasks %}
        <li><a href="{{ path('task_show') }}">{{ task }}</a></li>
    {% endfor %}
{% endblock %}